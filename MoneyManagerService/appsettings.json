{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Hangfire": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Swagger": {
    "Enabled": true,
    "AuthSettings": {
      "RequireAuth": true
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://rwherber.com",
      "http://localhost:4200",
      "http://localhost:5000",
      "https://localhost:5001"
    ],
    "ExposedHeaders": ["X-Token-Expired", "X-Correlation-Id"]
  },
  "AlphaVantage": {
    "BaseUrl": "https://www.alphavantage.co",
    "RequestRetryAttempts": 3
  },
  "MySQL": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true
  },
  "AllowedHosts": "*"
}
